<tryton>
    <data>
        <!-- Extensión de la vista de líneas de inventario (FORMULARIO) -->
        <record model="ir.ui.view" id="inventory_line_waste_view_form">
            <field name="model">stock.inventory.line</field>
            <field name="inherit" ref="stock.inventory_line_form"/>  <!-- Ref corregida -->
            <field name="arch" type="xml">
                <xpath expr="//field[@name='expected_quantity']" position="after">
                    <field name="tipo_merma"/>
                    <field name="cantidad_merma"/>
                </xpath>
            </field>
        </record>

        <!-- Extensión de la vista árbol (LISTA) -->
        <record model="ir.ui.view" id="inventory_line_waste_view_tree">
            <field name="model">stock.inventory.line</field>
            <field name="inherit" ref="stock.inventory_line_tree"/>  <!-- Ref corregida -->
            <field name="arch" type="xml">
                <xpath expr="//field[@name='expected_quantity']" position="after">
                    <field name="tipo_merma"/>
                    <field name="cantidad_merma"/>
                </xpath>
            </field>
        </record>
    </data>
</tryton>